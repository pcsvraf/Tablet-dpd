<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="3000dp"
    android:background="@color/blanco"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="73dp"
        android:layout_marginVertical="50dp"
        android:text="Seleccione el motivo por el que acudió a la Oficina Atención a Estudiantes:"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:textSize="47dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/certificados"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/certificados"
            android:text="Certificados"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/ingreso"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/ingreso"
            android:text="Ingreso especial, Cambio de carrera"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/matricula"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/matricula"
            android:text="Matrícula"
            android:textSize="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="800dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="180dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reconocimiento"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/reconocimiento"
            android:text="Reconocimiento de Estudio"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/sanciones"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/sanciones"
            android:text="Sanciones Académicas / Tribunal de Mérito"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/solicitud"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/solicitud"
            android:text="Solicitud de Clave y/o perfil"
            android:textSize="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="2200dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tne"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="290dp"
            android:background="@drawable/tne"
            android:text="Tarjeta Nacional Estudiantil (TNE)"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/retiro"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="290dp"
            android:background="@drawable/retiro"
            android:text="Retiro Parcial / Inscripción Extemporánea"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/otras"
            android:layout_width="365px"
            android:layout_height="66px"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="290dp"
            android:background="@drawable/otras"
            android:text="Otras Solicitudes"
            android:textSize="0dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/textotime4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp" />


</RelativeLayout>